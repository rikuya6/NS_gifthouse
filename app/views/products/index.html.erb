<% @page_title = '商品一覧' %>

<div class="page-header">
  <h1>商品一覧</h1>
</div>

<% if @products %>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="text-center">名前</th>
        <th class="text-center">価格</th>
        <th class="text-center">重さ</th>
        <th class="text-center">在庫数</th>
        <th class="text-center">商品説明</th>
        <th class="text-center">カテゴリ</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td class="text-center"><%= product.name %></td>
        <td class="text-right"><%= number_with_delimiter(product.price) %></td>
        <td class="text-right"><%= product.weight %></td>
        <td class="text-right"><%= number_with_delimiter(product.stock) %></td>
        <td><%= product.note %></td>
        <td>
          <% product.category.each do |categories| %>
            <%= categories.name %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @products %>
<% else %>
<p>商品がありません。</p>
<% end %>
