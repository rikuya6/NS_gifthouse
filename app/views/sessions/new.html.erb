<% @page_title = 'ログイン' %>

<div class="col-md-6 col-md-offset-3">
  <h1>ログイン</h1>
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label 'メールアドレス' %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label 'パスワード' %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.submit 'ログイン', class: 'btn btn-primary'%>
  <% end %>
</div>
