<% @page_title = '管理画面：注文一覧' %>

<div class="page-header">
  <h1>注文一覧</h1>
</div>

<% if @orders.present? %>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="text-center">ユーザID</th>
        <th class="text-center">商品名</th>
        <th class="text-center">ラッピング</th>
        <th class="text-center"></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <td class="col-md-2"><%= order.user_id %></td>
        <td class="col-md-5"><%= order.product_name %></td>
        <td class="col-md-3"><%= order.wrapping_name %></td>
        <td class="text-center col-md-2">
          <%= link_to '詳細', admin_order_path(order.id), class: 'btn btn-info btn-xs',
            style: 'width: 4em' %>
          <%= link_to '削除', admin_order_path(order.id), method: :delete, class: 'btn btn-xs btn-danger',
            style: 'width: 4em;', data: { disable_with: '削除中'} %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @orders %>
<% else %>
<p>注文がありません。</p>
<% end %>
